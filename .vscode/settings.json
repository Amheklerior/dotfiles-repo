{
  "files.associations": {
    // apply the same syntax highlighting used for `Brewfile` (i.e. Ruby)
    "*.bundle": "ruby",

    // ensure no weird highlighting is applied to the files in the /secrets directory
    "*-key": "plaintext",
    "*-code": "plaintext",
    "*-codes": "plaintext",
    "*-token": "plaintext",
    "personal": "plaintext",
    "work-server": "plaintext"
  },
  "Lua.diagnostics.globals": [
    // silence the "undefined global" warning for `vim` in Neovim config files
    "vim"
  ]
}